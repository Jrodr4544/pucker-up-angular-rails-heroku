#main-navbar {
  background: url(<%= asset_path 'background/beer-dark-foam.png' %>);
  background-position: 0px 100px;
  font-family: 'Droid Sans', sans-serif; 
  font-weight: 700;
  a.navbar-brand {
      font-size: 2em;
      color: #f28f00;
      text-shadow: 1px 1px 1px rgba(0,0,0,0.6);
  }
  li span.user {
      color: #777;
      position: relative;
      display: block;
      padding: 15px 15px

  }
}

@media(max-width: 767px) {
  #main-navbar {
      background: url(<%= asset_path 'background/beer-dark-foam.png' %>);
      background-position: center center;
      background-size: cover;
      ul.nav li a {
          color: #000000
      }
  }
}
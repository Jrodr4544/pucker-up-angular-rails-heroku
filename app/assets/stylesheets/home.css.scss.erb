body,
html {
    margin: 0;
    background: url(<%= asset_path 'background/beer-dark-trimmed.png' %>);
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-repeat: no-repeat;
    background-position: center center
}

html,
body {
    height: 100%
}

div#main-container {
    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        font-family: 'Droid Sans', sans-serif;
        font-weight: 700
    }
    p {
        font-family: 'Droid Sans', sans-serif;
    }
    button {
        font-family: 'Droid Sans', sans-serif;
    }
}

div#definition {
    background: url(<%= asset_path 'background/beer-dark-trimmed.png' %>);
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    text-align: center;
    p {
        font-size: 1.75em;
    }
}

@media(max-width: 767px) {
    div#main-container {
        background: url(<%= asset_path 'background/beer-dark-trimmed.png' %>);
        background-size: cover;
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-repeat: no-repeat;
        background-position: center center
    }
}

.wrapper {
    min-height: 100%;
    margin-bottom: -75px;
}

.footer,
.push {
    height: 75px;
}